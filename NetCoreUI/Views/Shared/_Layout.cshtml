            <div style="padding: 15px;">@RenderBody()</div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            <a href="https://www.jianshu.com/u/79758fa3d8b0"> ©凌雲木-       2018.01.01</a>
